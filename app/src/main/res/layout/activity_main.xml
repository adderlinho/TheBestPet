<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_Loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingBottom="@dimen/activity_vertical_padding">

    <ImageView
        android:id="@+id/imgvMascotaInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/curso3" />

    <TextView
        android:id="@+id/tvTituloInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTituloInicio"
        android:textSize="@dimen/tv_sizeInicio"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgvMascotaInicio"/>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btnInicio"
        android:layout_alignParentBottom="true"
        android:theme="@style/BotonStyle"/>

</RelativeLayout>

